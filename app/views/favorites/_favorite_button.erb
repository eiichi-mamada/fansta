<% if user_signed_in? and post.user != current_user %>　
  <% if post.favorite?(current_user) %>
    <%= form_with(model: post.favorites.find_by(user_id: current_user.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: post.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'お気に入り', class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>
<% end %>