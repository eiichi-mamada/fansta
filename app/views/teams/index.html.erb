<h1>Teams#index</h1>
<% team_index %>
<% @teams.each do |team| %>
  <div class="media bg-secondary m-4">
    <% if team.icon? %>
      <%= image_tag team.icon.url, :size => '100x100', class:"mr-3", alt: team.icon.url %>
    <% else %>
      <%= image_tag asset_path("no_image.png"), :size => '100x100', class:"mr-3", alt: "no_image.png" %>
    <% end %>
    <div class="media-body">
      <%= link_to team.name ,team_path(team.id), class:"text-white"%>
    </div>
    <p class="position-absolute text-white"># <%= team.id %></p>
    <%= render "teams/add_icon", team: team %>
    <%= link_to "Delete", team, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm float-sm-left' %></br>
  </div>
<% end %>
<%= form_with(model: @team, local: true) do |f| %>

  <%= f.label "number:" %>
  <%= f.text_field :id %>
  <br />
  <%= f.label "team_name:" %>
  <%= f.text_field :name %>
  <br />
  <%= f.file_field :icon, accept: 'image/jpeg,image/gif,image/png' %>
  <br />
